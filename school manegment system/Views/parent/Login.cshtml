@model school_manegment_system.Models.school

@{
    ViewData["Title"] = "Parent Login";
}
<body class="bgimg">
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Name">Student Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="studentpasskey">Student Passkey</label>
                            <input asp-for="studentpasskey" type="password" class="form-control" />
                            <span asp-validation-for="studentpasskey" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<style>
    body {
        background-color: #f7f7f7;
    }

    .card {
        margin-top: 50px;
        border: 1px solid #d4d4d4;
        border-radius: 5px;
    }

    .card-header {
        background-color: #007bff;
        color: #fff;
    }

    .btn-primary {
        background-color: #007bff;
        border: 1px solid #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
<style>

    .bgimg {
        background-image: url(https://th.bing.com/th/id/OIG.uC1vK5We2rgXDx4mxgJS?w=270&h=270&c=6&r=0&o=5&dpr=1.3&pid=ImgGn);
        opacity: 0.7;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: scroll; /* Optional: This makes the background image fixed when scrolling */
        /* Other styles you may want to include */
        margin: 0; /* Remove default body margin */
        padding: 0; /* Remove default body padding */
    }

    h1 {
        color: white;
    }

    p {
        color: white;
    }
</style>
