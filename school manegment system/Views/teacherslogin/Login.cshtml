@model school_manegment_system.Models.teacherslogin

@{
    ViewData["Title"] = "Teacher's Login";
}
<body class="bgimg">

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center">Teacher's Login</h2>
            <hr />

            <form asp-action="Login" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Your Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </div>
            </form>

            <div class="text-center mt-3">
            </div>
        </div>
    </div>
</div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>

    .bgimg {
        background-image: url(https://th.bing.com/th/id/OIG.uC1vK5We2rgXDx4mxgJS?w=270&h=270&c=6&r=0&o=5&dpr=1.3&pid=ImgGn);
        opacity: 0.7;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: scroll; /* Optional: This makes the background image fixed when scrolling */
        /* Other styles you may want to include */
        margin: 0; /* Remove default body margin */
        padding: 0; /* Remove default body padding */
    }

    h1 {
        color: white;
    }

    p {
        color: white;
    }
</style>
