<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - school_manegment_system</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/school_manegment_system.styles.css" asp-append-version="true" />

    <style>
        /* Custom Navbar Styles */
        .navbar {
            background-color: #007BFF;
        }

        .navbar-brand {
            color: #fff;
            font-weight: bold;
        }

        .navbar-toggler-icon {
            background-color: #fff;
        }

        .navbar-nav .nav-item {
            margin: 0 10px;
        }

            .navbar-nav .nav-item a {
                color: #fff;
                text-decoration: none;
            }

                .navbar-nav .nav-item a:hover {
                    color: #f8f9fa;
                }

                .hover:hover{

                   border-bottom:groove 2px yellow;
                    

                    
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">school_manegment_system</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark hover" asp-area="" asp-controller="parent" asp-action="Login">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark hover" asp-area="" asp-controller="Home" asp-action="Privacy">admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark hover" asp-area="" asp-controller="teacherslogin" asp-action="Login">teachers</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
