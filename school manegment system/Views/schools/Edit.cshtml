@model school_manegment_system.Models.school

@{
    ViewData["Title"] = "Edit";
}
<body class="bgimg">

<div class="container">
    <h1>Edit School</h1>
    <h4>School Details</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label">School Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="class_teachname" class="control-label">Teacher's Name</label>
                    <input asp-for="class_teachname" class="form-control" />
                    <span asp-validation-for="class_teachname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="parent_name" class="control-label">Parent's Name</label>
                    <input asp-for="parent_name" class="form-control" />
                    <span asp-validation-for="parent_name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="classs" class="control-label">Class</label>
                    <input asp-for="classs" class="form-control" />
                    <span asp-validation-for="classs" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="progress" class="control-label">Progress</label>
                    <input asp-for="progress" class="form-control" />
                    <span asp-validation-for="progress" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="section" class="control-label">Section</label>
                    <input asp-for="section" class="form-control" />
                    <span asp-validation-for="section" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="roll_no" class="control-label">Roll No</label>
                    <input asp-for="roll_no" class="form-control" />
                    <span asp-validation-for="roll_no" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="studentpasskey" class="control-label">Student Passkey</label>
                    <input asp-for="studentpasskey" class="form-control" />
                    <span asp-validation-for="studentpasskey" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


