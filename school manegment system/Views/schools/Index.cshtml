@model IEnumerable<school_manegment_system.Models.school>

@{
    ViewData["Title"] = "School Management";
}
<link rel="stylesheet" type="text/css" href="~/css/style.css">

<body class="bgimg">

<div class="container">

    <h1 style="color:black;" class="text-center">School Management</h1>
    <p class="text-center">
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </p>

    <div  class="table-responsive " table>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Student Name</th>
                    <th>Parent Name</th>
                    <th>Teacher's Name</th>
                    <th>Class</th>
                    <th>Progress</th>
                    <th>Section</th>
                    <th>Roll No</th>
                    <th>Student Passkey</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.parent_name)</td>
                        <td>@Html.DisplayFor(modelItem => item.class_teachname)</td>
                        <td>@Html.DisplayFor(modelItem => item.classs)</td>
                        <td>@Html.DisplayFor(modelItem => item.progress)</td>
                        <td>@Html.DisplayFor(modelItem => item.section)</td>
                        <td>@Html.DisplayFor(modelItem => item.roll_no)</td>
                        <td>@Html.DisplayFor(modelItem => item.studentpasskey)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</body>
<style>

    .bgimg {
        background-image: url(https://th.bing.com/th/id/OIG.uC1vK5We2rgXDx4mxgJS?w=270&h=270&c=6&r=0&o=5&dpr=1.3&pid=ImgGn);
        opacity: 0.7;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: scroll; /* Optional: This makes the background image fixed when scrolling */
        /* Other styles you may want to include */
        margin: 0; /* Remove default body margin */
        padding: 0; /* Remove default body padding */
    }

    h1 {
        color: white;
    }

    p {
        color: white;
    }


    
</style>
